<!DOCTYPE html>

<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <main class="container">
      <% include ../static/partials/navbar.ejs %>
      <% include ../static/partials/messages.ejs %>

        <% if(post.lost == true) { %>
            <h4>Lost Pet</h4>
            <% } else { %>
            <h4>Found Pet</h4>
            <% } %>
            <p> TYPE: <%= post.animal %> </p>
            <p> COLOR: <%= post.color %> </p>
            <p> DESCRIPTION: <%= post.description %> </p>
            <p> DATE: <%= ("0" + (new Date(post.date).getMonth()+1)).slice(-2).toString().concat("-", new Date(post.date).getDate().toString(), "-", new Date(post.date).getFullYear().toString()) %> </p>
            <p> OTHER INFORMATION: <%= post.other %> </p>
            <a href="/posts/<%= post.id %>/edit" class="btn btn-warning">Edit</a>
            <form style="display:initial" action="/posts/<%= post.id %>/destroy" method="post">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>

    </main>
    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
